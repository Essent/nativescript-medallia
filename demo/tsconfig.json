{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "lib": ["dom", "es2017"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"],
      "@essent/nativescript-medallia": ["../src/index.d.ts"],
      "@essent/nativescript-medallia/*": ["../src/*"]
    }
  },
  "exclude": ["node_modules", "platforms"]
}
